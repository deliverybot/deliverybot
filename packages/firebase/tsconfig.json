{
  "compilerOptions": {
    "allowJs": false,
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "pretty": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "./lib",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ],
    "types": []
  },
  "include": [
    "src/**/*"
  ],
  "compileOnSave": false
}