{{> header}}

<div class="content d-flex flex-justify-between mt-5">
  <h2>
    My installations
  </h2>
  <div>
    <a data-track="add-integration" data-action="click->analytics#trackEvent" target="_blank" href="{{info.integrations}}" class="btn btn-default">
      + Integration
    </a>
    <a data-track="add-install" data-action="click->analytics#trackEvent" target="_blank" href="{{info.install}}" class="btn btn-primary">
      + Install
    </a>
  </div>
</div>

<nav class="UnderlineNav mt-2">
  <div class="content">
    <div class="UnderlineNav-body p-3">
    </div>
  </div>
</nav>
</header>

<main class="bg-white fill pt-3 pb-8">
  <div class="content">
    {{#if hasInstalls}}
    <div class="clearfix">
      <div class="mt-5 p-4 col-12 col-md-8 float-left">
        {{#each installs}}
        <div class="p-3 d-flex flex-justify-between border-bottom">
          <h3>
            <a href="/{{name}}">{{name}}</a>
          </h3>
          <a target="_blank" href="{{htmlUrl}}">Edit</a>
        </div>
        {{/each}}
      </div>
      <div class="mt-5 p-2 col-12 col-md-4 float-left">
        <div class="Box mb-4" data-controller="recents">
          <div class="Box-body">
            <h4 class="mb-3">Recent repositories</h4>
            <div data-target="recents.recents"></div>
          </div>
        </div>
        <div class="Box">
          <div class="Box-body">
            <h4 class="mb-3">Welcome to Deliverybot!</h4>
            <p>
              Ready to get deploying? Visit one of your installations to the left
              or <a href="{{info.install}}">install</a> Deliverybot on a new account.
            </p>
          </div>
        </div>
      </div>
    </div>
    {{else}}
    <div class="text-center">
      <p class="lead">
        You don't have deliverybot installed.
      </p>
      <a class="btn btn-outline" role="button" target="_blank" href="{{info.install}}">
        Install now
      </a>
    </div>
    {{/if}}
  </div>
</main>

{{> footer}}
